{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "AdGuardHomeHA": "Information",
      "System.Net.Http.HttpClient": "Warning"
    }
  },
  "AdGuardHomeHA": {
    "AdGuardHome": {
      "BaseUrl": "http://your-adguard-home:3000",
      "Username": "admin",
      "Password": ""
    },
    "Services": [
      {
        "Name": "Web Frontend",
        "MonitoringMode": "Ping",
        "IpAddress": "192.168.1.100",
        "Priority": 1,
        "TimeoutMs": 5000,
        "DnsRewrites": [
          "www.yourdomain.com",
          "yourdomain.com"
        ]
      },
      {
        "Name": "API Backend",
        "MonitoringMode": "Ping",
        "IpAddress": "192.168.1.101",
        "Priority": 2,
        "TimeoutMs": 5000,
        "DnsRewrites": [
          "api.yourdomain.com"
        ]
      },
      {
        "Name": "Database Service",
        "MonitoringMode": "Gatus",
        "IpAddress": "192.168.1.102",
        "Priority": 3,
        "DnsRewrites": [
          "db.yourdomain.com"
        ],
        "GatusEndpointNames": ["production_gatus-db-1", "production_gatus-db-2"],
        "GatusInstanceUrls": ["http://gatus-1:8080", "http://gatus-2:8080"],
        "RequiredGatusEndpoints": 1
      }
    ],
    "Monitoring": {
      "CheckIntervalSeconds": 30,
      "RetryAttempts": 3,
      "RetryDelayMs": 1000
    },
    "GatusPolling": {
      "IntervalSeconds": 30,
      "TimeoutSeconds": 10
    }
  }
}
